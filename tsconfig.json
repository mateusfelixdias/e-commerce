{
  "compilerOptions": {
    "target": "es5",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "module": "esnext",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"] },
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/product"
  ]
}
